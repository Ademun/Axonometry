<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.axonometry.CanvasPane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400"
            prefWidth="800" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.axonometry.controllers.Canvas3DController">
    <top>
        <MenuBar BorderPane.alignment="CENTER" styleClass="menu__bar">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="Close"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem mnemonicParsing="false" text="Delete"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <CanvasPane focusTraversable="true" BorderPane.alignment="CENTER" fx:id="canvasPane"/>
    </center>
    <left>
        <TabPane fx:id="canvasTabs" focusTraversable="false" styleClass="tab__panel">
            <Tab closable="false" text="Создать" styleClass="tab">
                <VBox prefHeight="344.0" prefWidth="175.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets left="25.0" right="25.0" top="15.0"/>
                    </padding>
                    <TextField fx:id="vertexField" styleClass="text__field" promptText="A (x, y, z)"/>
                </VBox>
            </Tab>
        </TabPane>
    </left>
    <bottom>
        <HBox prefHeight="30.0" prefWidth="800.0" BorderPane.alignment="CENTER" styleClass="status__panel" alignment="CENTER_LEFT">
            <Label fx:id="objectCount" styleClass="status__panel__text">
                <padding>
                    <Insets>
                        <left>15</left>
                        <right>25</right>
                    </Insets>
                </padding>
                Объекты:
            </Label>
            <Label fx:id="rotation" styleClass="status__panel__text">X: Y: Z:</Label>
        </HBox>
    </bottom>
</BorderPane>
